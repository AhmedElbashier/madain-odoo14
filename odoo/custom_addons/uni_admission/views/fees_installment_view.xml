<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="fees_installment_view_form" model="ir.ui.view">
		<field name="name">uni.fees.installment.form</field>
		<field name="model">uni.fees.installment</field>
		<field name="arch" type="xml">
			<form string="Fees installment">
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only"/>
						<h1>
							<field name="name" class="oe_inline"/>
						</h1>
					</div>
					<group>
						<group>
							<field name="start_date"/>
							<field name="end_date"/>
						</group>
						<group>
							<field name="installment_percentage"/>
							<field name="include_registration_fees"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>
